<% include ../partials/loggedInHeader %>



<div class="ui one column">
	<div class="ui column row">
		<p>
			<h1 class="ui segment">Results for "<%= term %>"</h1>
		</p>
	</div>
</div>

<div class="ui two column centered grid"> 
	<div class="column">

		<table class="ui table segment">
			<thead>
				<tr>
					<th>Bussiness</th>
					<th></th>
					<th>No. of Reviews</th>
					<th>Rating</th>
					<th>Location</th>
					<th><p></p></th>
					<th><p></p></th>
				</tr>
			</thead>
			<tbody>
				<% results.businesses.forEach(function(business){ %>
				<tr>
					<td class='favName'>
						<a href="<%= business.url %>" > <%= business.name %> </a>  
					</td>
					<td class='favImage'>
						<img class="ui small rounded image" src="<%= business.image_url %>" alt="Business Image">
					</td>
					<td class="favReviewCount">
						<%= business.review_count %>
					</td>
					<td class="favRating">
						<%= business.rating %>
					</td>

					<td class='favAddress'>
						<%= business.location.address %>
					</td>
					<td>   
						<form class="favButton" action="/users/<%= id %>/favorites/" method="POST">
						<input type="submit" value="Favorite" class="compact mini ui blue labeled button">
						<input type="hidden" name="business[name]" value="<%= business.name %>">
						<input type="hidden" class="data" id="data" value="<%= id %>">
						</form>
					</td>
					<td>
						<form id="comment" action="/users/<%= id %>/favorites/" method="POST">
							<input  id="comment" type="submit" value="Add Note" class="compact mini ui purple labeled button">
							<textarea name="textarea" id="comment" cols="20" rows="5" style="display:none">Write Note</textarea>
						</form>
					</td>
				</tr>
				<% }); %> 
			</tbody>
			<tfoot>
			  <tr><th colspan="7">
			    <div class="ui green labeled button">More</div>
			  </th>
			</tr></tfoot>
		</table>

	</div>
</div>


<% include ../partials/loggedInFooter %>